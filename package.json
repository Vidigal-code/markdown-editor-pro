{
  "name": "markdown-editor-pro",
  "private": false,
  "version": "1.0.0",
  "description": "Markdown Editor is a React-based project for editing Markdown text, with support for emojis, styling via Styled Components, and secure rendering using Rehype and Remark.",
  "homepage": "https://vidigal-code.github.io/markdown-editor-pro",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "emoji-mart": "^5.6.0",
    "html2pdf.js": "^0.10.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "styled-components": "^6.3.9",
    "twemoji": "^14.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "gh-pages": "^6.3.0",
    "globals": "^17.3.0",
    "sass": "^1.97.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1"
  }
}
