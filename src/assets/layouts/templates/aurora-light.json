{
    "id": "aurora-light",
    "name": "Aurora Light",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "mode": "light",
    "supportsLightAndDarkModes": true,
    "colors": {
        "background": "#F8FAFC",
        "primary": "#6D28D9",
        "secondary": "#EEF2FF",
        "text": "#0F172A",
        "textSecondary": "#475569",
        "cardBackground": "#FFFFFF",
        "cardBorder": "#E2E8F0",
        "error": "#E11D48",
        "success": "#059669"
    },
    "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Inter, Roboto, Helvetica, Arial, sans-serif",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "rgba(248, 250, 252, 0.9)",
            "borderBottom": "1px solid #E2E8F0"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "rgba(248, 250, 252, 0.9)",
            "borderTop": "1px solid #E2E8F0"
        },
        "card": {
            "borderRadius": "16px",
            "padding": "24px",
            "boxShadow": "0 18px 50px rgba(15, 23, 42, 0.08)"
        },
        "button": {
            "borderRadius": "12px",
            "padding": "10px 18px",
            "border": "1px solid #E2E8F0",
            "hoverGlow": "0 0 0 4px rgba(109, 40, 217, 0.15)"
        },
        "select": {
            "borderRadius": "12px",
            "padding": "10px 40px 10px 16px",
            "border": "1px solid #E2E8F0",
            "backgroundColor": "#FFFFFF",
            "textAlign": "center",
            "iconColor": "#0891B2",
            "hoverBorderColor": "rgba(8, 145, 178, 0.7)",
            "focusBorderColor": "rgba(109, 40, 217, 0.8)",
            "focusGlow": "0 0 0 4px rgba(109, 40, 217, 0.15)"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#6D28D9",
            "borderColor": "#CBD5E1",
            "hoverBorderColor": "rgba(8, 145, 178, 0.7)",
            "checkMarkColor": "#F8FAFC",
            "borderRadius": "6px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "12px",
                "border": "1px solid #E2E8F0",
                "backgroundColor": "#FFFFFF",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "rgba(8, 145, 178, 0.7)",
                "focusBorderColor": "rgba(109, 40, 217, 0.8)"
            },
            "homeButton": { "width": "80px" },
            "createButton": { "width": "80px" },
            "languageSelect": { "width": "130px" },
            "themeSelect": { "width": "170px" },
            "modeToggle": { "width": "42px" }
        }
    },
    "animations": {
        "enableTypingEffect": false,
        "enableGlow": false,
        "transitionDuration": "0.22s"
    }
}


