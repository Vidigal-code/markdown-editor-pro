{
    "id": "sunset-light",
    "name": "Sunset Light",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "mode": "light",
    "supportsLightAndDarkModes": true,
    "colors": {
        "background": "#FFF7F2",
        "primary": "#FF6A00",
        "secondary": "#FFF1EA",
        "text": "#2A1A1F",
        "textSecondary": "#6B4E57",
        "cardBackground": "#FFFFFF",
        "cardBorder": "#FFE0D1",
        "error": "#E11D48",
        "success": "#16A34A"
    },
    "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Inter, Roboto, Helvetica, Arial, sans-serif",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "rgba(255, 247, 242, 0.9)",
            "borderBottom": "1px solid #FFE0D1"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "rgba(255, 247, 242, 0.9)",
            "borderTop": "1px solid #FFE0D1"
        },
        "card": {
            "borderRadius": "16px",
            "padding": "24px",
            "boxShadow": "0 18px 50px rgba(42, 26, 31, 0.10)"
        },
        "button": {
            "borderRadius": "12px",
            "padding": "10px 18px",
            "border": "1px solid #FFE0D1",
            "hoverGlow": "0 0 0 4px rgba(255, 106, 0, 0.16)"
        },
        "select": {
            "borderRadius": "12px",
            "padding": "10px 40px 10px 16px",
            "border": "1px solid #FFE0D1",
            "backgroundColor": "#FFFFFF",
            "textAlign": "center",
            "iconColor": "#FF6A00",
            "hoverBorderColor": "rgba(225, 29, 72, 0.6)",
            "focusBorderColor": "rgba(255, 106, 0, 0.85)",
            "focusGlow": "0 0 0 4px rgba(255, 106, 0, 0.16)"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#FF6A00",
            "borderColor": "#FFD2BE",
            "hoverBorderColor": "rgba(225, 29, 72, 0.6)",
            "checkMarkColor": "#FFF7F2",
            "borderRadius": "6px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "12px",
                "border": "1px solid #FFE0D1",
                "backgroundColor": "#FFFFFF",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "rgba(225, 29, 72, 0.6)",
                "focusBorderColor": "rgba(255, 106, 0, 0.85)"
            },
            "homeButton": { "width": "80px" },
            "createButton": { "width": "80px" },
            "languageSelect": { "width": "130px" },
            "themeSelect": { "width": "170px" },
            "modeToggle": { "width": "42px" }
        }
    },
    "animations": {
        "enableTypingEffect": false,
        "enableGlow": false,
        "transitionDuration": "0.22s"
    }
}


