{
    "id": "nord-dark",
    "name": "Nord Dark",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "mode": "dark",
    "supportsLightAndDarkModes": true,
    "colors": {
        "background": "#2E3440",
        "primary": "#88C0D0",
        "secondary": "#3B4252",
        "text": "#ECEFF4",
        "textSecondary": "#D8DEE9",
        "cardBackground": "#3B4252",
        "cardBorder": "#4C566A",
        "error": "#BF616A",
        "success": "#A3BE8C"
    },
    "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Inter, Roboto, Helvetica, Arial, sans-serif",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "#2E3440",
            "borderBottom": "1px solid #4C566A"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "#2E3440",
            "borderTop": "1px solid #4C566A"
        },
        "card": {
            "borderRadius": "14px",
            "padding": "24px",
            "boxShadow": "0 16px 48px rgba(0, 0, 0, 0.35)"
        },
        "button": {
            "borderRadius": "12px",
            "padding": "10px 18px",
            "border": "1px solid #4C566A",
            "hoverGlow": "0 0 0 3px rgba(136, 192, 208, 0.18)"
        },
        "select": {
            "borderRadius": "12px",
            "padding": "10px 40px 10px 16px",
            "border": "1px solid #4C566A",
            "backgroundColor": "#3B4252",
            "textAlign": "center",
            "iconColor": "#88C0D0",
            "hoverBorderColor": "#88C0D0",
            "focusBorderColor": "#88C0D0",
            "focusGlow": "0 0 0 4px rgba(136, 192, 208, 0.18)"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#88C0D0",
            "borderColor": "#4C566A",
            "hoverBorderColor": "#88C0D0",
            "checkMarkColor": "#2E3440",
            "borderRadius": "6px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "12px",
                "border": "1px solid #4C566A",
                "backgroundColor": "#3B4252",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "#88C0D0",
                "focusBorderColor": "#88C0D0"
            },
            "homeButton": { "width": "80px" },
            "createButton": { "width": "80px" },
            "languageSelect": { "width": "130px" },
            "themeSelect": { "width": "170px" },
            "modeToggle": { "width": "42px" }
        }
    },
    "animations": {
        "enableTypingEffect": false,
        "enableGlow": false,
        "transitionDuration": "0.22s"
    }
}


