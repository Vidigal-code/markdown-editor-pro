{
    "id": "matrix-light",
    "name": "Matrix Light",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "mode": "light",
    "supportsLightAndDarkModes": true,
    "colors": {
        "background": "#f0f8f0",
        "primary": "#008f11",
        "secondary": "#E6F7EA",
        "text": "#0d0208",
        "textSecondary": "#008f11",
        "cardBackground": "rgba(0, 143, 17, 0.05)",
        "cardBorder": "#008f11",
        "error": "#cc0000",
        "success": "#008f11"
    },
    "typography": {
        "fontFamily": "'Courier New', monospace",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "rgba(0, 143, 17, 0.1)",
            "borderBottom": "2px solid #008f11"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "rgba(0, 143, 17, 0.05)",
            "borderTop": "1px solid #008f11"
        },
        "card": {
            "borderRadius": "8px",
            "padding": "24px",
            "boxShadow": "0 0 20px rgba(0, 143, 17, 0.2)"
        },
        "button": {
            "borderRadius": "4px",
            "padding": "12px 24px",
            "border": "2px solid #008f11",
            "hoverGlow": "0 0 10px #008f11"
        },
        "select": {
            "borderRadius": "6px",
            "padding": "10px 40px 10px 16px",
            "border": "2px solid #008f11",
            "backgroundColor": "rgba(0, 143, 17, 0.08)",
            "textAlign": "center",
            "iconColor": "#008f11",
            "hoverBorderColor": "#00ff41",
            "focusBorderColor": "#00ff41",
            "focusGlow": "0 0 15px rgba(0, 143, 17, 0.4)"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#008f11",
            "borderColor": "#008f11",
            "hoverBorderColor": "#00ff41",
            "checkMarkColor": "#ffffff",
            "borderRadius": "2px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "4px",
                "border": "2px solid #008f11",
                "backgroundColor": "rgba(0, 143, 17, 0.08)",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "#00ff41",
                "focusBorderColor": "#00ff41"
            },
            "homeButton": {
                "width": "80px"
            },
            "createButton": {
                "width": "80px"
            },
            "languageSelect": {
                "width": "130px"
            },
            "themeSelect": {
                "width": "150px"
            },
            "modeToggle": {
                "width": "42px"
            }
        }
    },
    "animations": {
        "enableTypingEffect": true,
        "enableGlow": true,
        "transitionDuration": "0.3s"
    }
}