{
    "id": "nord-light",
    "name": "Nord Light",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "mode": "light",
    "supportsLightAndDarkModes": true,
    "colors": {
        "background": "#ECEFF4",
        "primary": "#5E81AC",
        "secondary": "#E5E9F0",
        "text": "#2E3440",
        "textSecondary": "#4C566A",
        "cardBackground": "#FFFFFF",
        "cardBorder": "#D8DEE9",
        "error": "#BF616A",
        "success": "#2E7D5B"
    },
    "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Inter, Roboto, Helvetica, Arial, sans-serif",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "rgba(236, 239, 244, 0.92)",
            "borderBottom": "1px solid #D8DEE9"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "rgba(236, 239, 244, 0.92)",
            "borderTop": "1px solid #D8DEE9"
        },
        "card": {
            "borderRadius": "14px",
            "padding": "24px",
            "boxShadow": "0 16px 48px rgba(46, 52, 64, 0.12)"
        },
        "button": {
            "borderRadius": "12px",
            "padding": "10px 18px",
            "border": "1px solid #D8DEE9",
            "hoverGlow": "0 0 0 4px rgba(94, 129, 172, 0.14)"
        },
        "select": {
            "borderRadius": "12px",
            "padding": "10px 40px 10px 16px",
            "border": "1px solid #D8DEE9",
            "backgroundColor": "#FFFFFF",
            "textAlign": "center",
            "iconColor": "#5E81AC",
            "hoverBorderColor": "#5E81AC",
            "focusBorderColor": "#5E81AC",
            "focusGlow": "0 0 0 4px rgba(94, 129, 172, 0.14)"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#5E81AC",
            "borderColor": "#C9D2E0",
            "hoverBorderColor": "#5E81AC",
            "checkMarkColor": "#ECEFF4",
            "borderRadius": "6px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "12px",
                "border": "1px solid #D8DEE9",
                "backgroundColor": "#FFFFFF",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "#5E81AC",
                "focusBorderColor": "#5E81AC"
            },
            "homeButton": { "width": "80px" },
            "createButton": { "width": "80px" },
            "languageSelect": { "width": "130px" },
            "themeSelect": { "width": "170px" },
            "modeToggle": { "width": "42px" }
        }
    },
    "animations": {
        "enableTypingEffect": false,
        "enableGlow": false,
        "transitionDuration": "0.22s"
    }
}


