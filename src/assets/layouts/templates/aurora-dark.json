{
    "id": "aurora-dark",
    "name": "Aurora Dark",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "mode": "dark",
    "supportsLightAndDarkModes": true,
    "colors": {
        "background": "#070A14",
        "primary": "#7C3AED",
        "secondary": "#111827",
        "text": "#E5E7EB",
        "textSecondary": "#9CA3AF",
        "cardBackground": "rgba(255, 255, 255, 0.04)",
        "cardBorder": "rgba(148, 163, 184, 0.24)",
        "error": "#FB7185",
        "success": "#34D399"
    },
    "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Inter, Roboto, Helvetica, Arial, sans-serif",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "rgba(7, 10, 20, 0.85)",
            "borderBottom": "1px solid rgba(148, 163, 184, 0.18)"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "rgba(7, 10, 20, 0.85)",
            "borderTop": "1px solid rgba(148, 163, 184, 0.18)"
        },
        "card": {
            "borderRadius": "16px",
            "padding": "24px",
            "boxShadow": "0 18px 60px rgba(0, 0, 0, 0.45)"
        },
        "button": {
            "borderRadius": "12px",
            "padding": "10px 18px",
            "border": "1px solid rgba(148, 163, 184, 0.24)",
            "hoverGlow": "0 0 0 3px rgba(124, 58, 237, 0.18)"
        },
        "select": {
            "borderRadius": "12px",
            "padding": "10px 40px 10px 16px",
            "border": "1px solid rgba(148, 163, 184, 0.24)",
            "backgroundColor": "rgba(255, 255, 255, 0.03)",
            "textAlign": "center",
            "iconColor": "#22D3EE",
            "hoverBorderColor": "rgba(34, 211, 238, 0.7)",
            "focusBorderColor": "rgba(124, 58, 237, 0.8)",
            "focusGlow": "0 0 0 4px rgba(124, 58, 237, 0.18)"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#7C3AED",
            "borderColor": "rgba(148, 163, 184, 0.35)",
            "hoverBorderColor": "rgba(34, 211, 238, 0.75)",
            "checkMarkColor": "#070A14",
            "borderRadius": "6px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "12px",
                "border": "1px solid rgba(148, 163, 184, 0.24)",
                "backgroundColor": "rgba(255, 255, 255, 0.03)",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "rgba(34, 211, 238, 0.7)",
                "focusBorderColor": "rgba(124, 58, 237, 0.8)"
            },
            "homeButton": { "width": "80px" },
            "createButton": { "width": "80px" },
            "languageSelect": { "width": "130px" },
            "themeSelect": { "width": "170px" },
            "modeToggle": { "width": "42px" }
        }
    },
    "animations": {
        "enableTypingEffect": false,
        "enableGlow": true,
        "transitionDuration": "0.22s"
    }
}


