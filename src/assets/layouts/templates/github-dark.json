{
    "id": "github-dark",
    "name": "GitHub Dark",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "mode": "dark",
    "supportsLightAndDarkModes": true,
    "colors": {
        "background": "#0d1117",
        "primary": "#58a6ff",
        "secondary": "#161b22",
        "text": "#c9d1d9",
        "textSecondary": "#8b949e",
        "cardBackground": "#161b22",
        "cardBorder": "#30363d",
        "error": "#f85149",
        "success": "#3fb950"
    },
    "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "#0d1117",
            "borderBottom": "1px solid #30363d"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "#0d1117",
            "borderTop": "1px solid #30363d"
        },
        "card": {
            "borderRadius": "8px",
            "padding": "24px",
            "boxShadow": "0 1px 0 rgba(1, 4, 9, 0.4)"
        },
        "button": {
            "borderRadius": "6px",
            "padding": "10px 18px",
            "border": "1px solid #30363d",
            "hoverGlow": "none"
        },
        "select": {
            "borderRadius": "6px",
            "padding": "10px 40px 10px 16px",
            "border": "1px solid #30363d",
            "backgroundColor": "#0d1117",
            "textAlign": "center",
            "iconColor": "#58a6ff",
            "hoverBorderColor": "#58a6ff",
            "focusBorderColor": "#58a6ff",
            "focusGlow": "0 0 0 3px rgba(88, 166, 255, 0.15)"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#58a6ff",
            "borderColor": "#30363d",
            "hoverBorderColor": "#58a6ff",
            "checkMarkColor": "#0d1117",
            "borderRadius": "4px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "8px",
                "border": "1px solid #30363d",
                "backgroundColor": "#0d1117",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "#58a6ff",
                "focusBorderColor": "#58a6ff"
            },
            "homeButton": { "width": "80px" },
            "createButton": { "width": "80px" },
            "languageSelect": { "width": "130px" },
            "themeSelect": { "width": "150px" },
            "modeToggle": { "width": "42px" }
        }
    },
    "animations": {
        "enableTypingEffect": false,
        "enableGlow": false,
        "transitionDuration": "0.2s"
    }
}