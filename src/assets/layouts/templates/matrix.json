{
    "id": "matrix",
    "name": "Matrix Theme",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "colors": {
        "background": "#0d0208",
        "primary": "#00ff41",
        "secondary": "#008f11",
        "text": "#00ff41",
        "textSecondary": "#008f11",
        "cardBackground": "rgba(0, 255, 65, 0.05)",
        "cardBorder": "#00ff41",
        "error": "#ff0000",
        "success": "#00ff41"
    },
    "typography": {
        "fontFamily": "'Courier New', monospace",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "rgba(0, 255, 65, 0.1)",
            "borderBottom": "2px solid #00ff41"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "rgba(0, 255, 65, 0.05)",
            "borderTop": "1px solid #00ff41"
        },
        "card": {
            "borderRadius": "8px",
            "padding": "24px",
            "boxShadow": "0 0 20px rgba(0, 255, 65, 0.3)"
        },
        "button": {
            "borderRadius": "4px",
            "padding": "12px 24px",
            "border": "2px solid #00ff41",
            "hoverGlow": "0 0 10px #00ff41"
        },
        "select": {
            "borderRadius": "4px",
            "padding": "8px 12px",
            "border": "2px solid #00ff41",
            "backgroundColor": "rgba(0, 255, 65, 0.05)",
            "textAlign": "left",
            "iconColor": "#00ff41",
            "hoverBorderColor": "#00ff41",
            "focusBorderColor": "#00ff41",
            "focusGlow": "0 0 10px #00ff41"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#00ff41",
            "borderColor": "#00ff41",
            "hoverBorderColor": "#008f11",
            "checkMarkColor": "#0d0208",
            "borderRadius": "4px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "4px",
                "border": "2px solid #00ff41",
                "backgroundColor": "rgba(0, 255, 65, 0.05)",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "#00ff41",
                "focusBorderColor": "#00ff41"
            },
            "homeButton": {
                "width": "80px"
            },
            "createButton": {
                "width": "80px"
            },
            "languageSelect": {
                "width": "130px"
            },
            "themeSelect": {
                "width": "150px"
            },
            "modeToggle": {
                "width": "42px"
            }
        }
    },
    "animations": {
        "enableTypingEffect": true,
        "enableGlow": true,
        "transitionDuration": "0.3s"
    }
}