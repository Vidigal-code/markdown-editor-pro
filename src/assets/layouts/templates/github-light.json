{
    "id": "github-light",
    "name": "GitHub Light",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "mode": "light",
    "supportsLightAndDarkModes": true,
    "colors": {
        "background": "#f6f8fa",
        "primary": "#0969da",
        "secondary": "#f6f8fa",
        "text": "#24292f",
        "textSecondary": "#57606a",
        "cardBackground": "#ffffff",
        "cardBorder": "#d0d7de",
        "error": "#cf222e",
        "success": "#1a7f37"
    },
    "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "#ffffff",
            "borderBottom": "1px solid #d0d7de"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "#ffffff",
            "borderTop": "1px solid #d0d7de"
        },
        "card": {
            "borderRadius": "8px",
            "padding": "24px",
            "boxShadow": "0 1px 0 rgba(27, 31, 36, 0.04)"
        },
        "button": {
            "borderRadius": "6px",
            "padding": "10px 18px",
            "border": "1px solid #d0d7de",
            "hoverGlow": "none"
        },
        "select": {
            "borderRadius": "6px",
            "padding": "10px 40px 10px 16px",
            "border": "1px solid #d0d7de",
            "backgroundColor": "#ffffff",
            "textAlign": "center",
            "iconColor": "#0969da",
            "hoverBorderColor": "#0969da",
            "focusBorderColor": "#0969da",
            "focusGlow": "0 0 0 3px rgba(9, 105, 218, 0.15)"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#0969da",
            "borderColor": "#d0d7de",
            "hoverBorderColor": "#0969da",
            "checkMarkColor": "#ffffff",
            "borderRadius": "4px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "8px",
                "border": "1px solid #d0d7de",
                "backgroundColor": "#ffffff",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "#0969da",
                "focusBorderColor": "#0969da"
            },
            "homeButton": { "width": "80px" },
            "createButton": { "width": "80px" },
            "languageSelect": { "width": "130px" },
            "themeSelect": { "width": "150px" },
            "modeToggle": { "width": "42px" }
        }
    },
    "animations": {
        "enableTypingEffect": false,
        "enableGlow": false,
        "transitionDuration": "0.2s"
    }
}