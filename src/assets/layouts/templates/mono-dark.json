{
    "id": "mono-dark",
    "name": "Mono Pro Dark",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "mode": "dark",
    "supportsLightAndDarkModes": true,
    "colors": {
        "background": "#0B0B0C",
        "primary": "#84CC16",
        "secondary": "#1A1A1D",
        "text": "#F5F5F5",
        "textSecondary": "#A1A1AA",
        "cardBackground": "#121214",
        "cardBorder": "#242428",
        "error": "#F43F5E",
        "success": "#84CC16"
    },
    "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Inter, Roboto, Helvetica, Arial, sans-serif",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "rgba(11, 11, 12, 0.92)",
            "borderBottom": "1px solid #242428"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "rgba(11, 11, 12, 0.92)",
            "borderTop": "1px solid #242428"
        },
        "card": {
            "borderRadius": "14px",
            "padding": "24px",
            "boxShadow": "0 18px 55px rgba(0, 0, 0, 0.55)"
        },
        "button": {
            "borderRadius": "12px",
            "padding": "10px 18px",
            "border": "1px solid #242428",
            "hoverGlow": "0 0 0 3px rgba(132, 204, 22, 0.18)"
        },
        "select": {
            "borderRadius": "12px",
            "padding": "10px 40px 10px 16px",
            "border": "1px solid #242428",
            "backgroundColor": "#121214",
            "textAlign": "center",
            "iconColor": "#84CC16",
            "hoverBorderColor": "rgba(132, 204, 22, 0.75)",
            "focusBorderColor": "rgba(132, 204, 22, 0.85)",
            "focusGlow": "0 0 0 4px rgba(132, 204, 22, 0.16)"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#84CC16",
            "borderColor": "#242428",
            "hoverBorderColor": "rgba(132, 204, 22, 0.75)",
            "checkMarkColor": "#0B0B0C",
            "borderRadius": "6px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "12px",
                "border": "1px solid #242428",
                "backgroundColor": "#121214",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "rgba(132, 204, 22, 0.75)",
                "focusBorderColor": "rgba(132, 204, 22, 0.85)"
            },
            "homeButton": { "width": "80px" },
            "createButton": { "width": "80px" },
            "languageSelect": { "width": "130px" },
            "themeSelect": { "width": "170px" },
            "modeToggle": { "width": "42px" }
        }
    },
    "animations": {
        "enableTypingEffect": false,
        "enableGlow": false,
        "transitionDuration": "0.22s"
    }
}


