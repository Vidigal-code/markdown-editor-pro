{
    "id": "sunset-dark",
    "name": "Sunset Dark",
    "author": "Kauan Vidigal",
    "version": "1.0.0",
    "mode": "dark",
    "supportsLightAndDarkModes": true,
    "colors": {
        "background": "#0F0A0C",
        "primary": "#FF7A18",
        "secondary": "#2A161C",
        "text": "#F5F5F4",
        "textSecondary": "#A8A29E",
        "cardBackground": "#1A1114",
        "cardBorder": "#3B212A",
        "error": "#FB7185",
        "success": "#22C55E"
    },
    "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Inter, Roboto, Helvetica, Arial, sans-serif",
        "fontSize": {
            "small": "0.875rem",
            "base": "1rem",
            "medium": "1.125rem",
            "large": "1.25rem",
            "xlarge": "2rem"
        }
    },
    "components": {
        "header": {
            "height": "80px",
            "backgroundColor": "rgba(15, 10, 12, 0.9)",
            "borderBottom": "1px solid #3B212A"
        },
        "footer": {
            "height": "60px",
            "backgroundColor": "rgba(15, 10, 12, 0.9)",
            "borderTop": "1px solid #3B212A"
        },
        "card": {
            "borderRadius": "16px",
            "padding": "24px",
            "boxShadow": "0 18px 60px rgba(0, 0, 0, 0.45)"
        },
        "button": {
            "borderRadius": "12px",
            "padding": "10px 18px",
            "border": "1px solid #3B212A",
            "hoverGlow": "0 0 0 3px rgba(255, 122, 24, 0.18)"
        },
        "select": {
            "borderRadius": "12px",
            "padding": "10px 40px 10px 16px",
            "border": "1px solid #3B212A",
            "backgroundColor": "#1A1114",
            "textAlign": "center",
            "iconColor": "#FF7A18",
            "hoverBorderColor": "rgba(255, 61, 119, 0.8)",
            "focusBorderColor": "rgba(255, 122, 24, 0.9)",
            "focusGlow": "0 0 0 4px rgba(255, 122, 24, 0.18)"
        },
        "checkbox": {
            "width": "20px",
            "height": "20px",
            "accentColor": "#FF7A18",
            "borderColor": "#3B212A",
            "hoverBorderColor": "rgba(255, 61, 119, 0.8)",
            "checkMarkColor": "#0F0A0C",
            "borderRadius": "6px"
        },
        "headerControls": {
            "common": {
                "height": "42px",
                "padding": "0 16px",
                "borderRadius": "12px",
                "border": "1px solid #3B212A",
                "backgroundColor": "#1A1114",
                "fontSize": "0.9rem",
                "fontWeight": "600",
                "hoverBorderColor": "rgba(255, 61, 119, 0.8)",
                "focusBorderColor": "rgba(255, 122, 24, 0.9)"
            },
            "homeButton": { "width": "80px" },
            "createButton": { "width": "80px" },
            "languageSelect": { "width": "130px" },
            "themeSelect": { "width": "170px" },
            "modeToggle": { "width": "42px" }
        }
    },
    "animations": {
        "enableTypingEffect": false,
        "enableGlow": false,
        "transitionDuration": "0.22s"
    }
}


